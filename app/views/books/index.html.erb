<%= flash[:message] %>
<h3 class="text-center">Dostępne książki</h3>



<p><%= link_to 'Dodaj książkę', new_book_path, class: "btn btn-primary" %></p>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Tytuł</th>
      <th scope="col">Autor</th>
      <th scope="col">Opis</th>
      <th scope="col">Cena</th>
      <th scope="col">W magazynie</th>
      <th scope="col">Akcja</th>
    </tr>
  </thead>
  <tbody>

  <% @books.each do |book| %>
    <tr>
        <th scope="row"><%= book.id %></th>
        <th><%= book.title %></th>
        <th><%= book.author %></th>
        <th><%= book.description %></th>
        <th><%= book.price %></th>
        <th><%= book.stock_quantity %></th>
        <th>
            <%= link_to 'Szczegóły', book_path(book), class:"btn btn-success" %>
            <%= link_to 'Edytuj', edit_book_path(book), class:"btn btn-warning" %>   <!-- <a href="/products/:id">title</a> -->
            <%= link_to 'Usuń', delete_book_path(book), method: :delete, data: {confirm: 'Czy na pewno chcesz usunąć?'},  class: "btn btn-danger"%>
               <!-- link = GET request, method: :delete -->
        </th>  
    </tr>
    <% end %>
  </tbody>
</table>
